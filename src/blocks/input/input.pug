//- Упоминание имени блока в классах обязательно, без этого он не попадёт в сборку

mixin input(placeholder, mods, name, id, value)

  //- Принимает:
  //-   placeholder {string} - атрибут placeholder
  //-   mods        {string} - список модификаторов
  //-   name        {string} - атрибут name
  //-   id          {string} - атрибут id
  //-   value       {string} - атрибут value
  //- Вызов:
        +input('Введите текст', 'some-mods', 'input-name', 'input-id', 'Текст')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' input--' + modsList[i].trim();
      }
    }

  input.input(
    class= allMods,
    id= id ? id : null,
    type='text',
    placeholder= placeholder ? placeholder : null,
    name= name ? name : null,
    value= value ? value : null)&attributes(attributes)

mixin input-email(placeholder, mods, name, id, value)

  //- Принимает:
  //-   placeholder {string} - атрибут placeholder
  //-   mods        {string} - список модификаторов
  //-   name        {string} - атрибут name
