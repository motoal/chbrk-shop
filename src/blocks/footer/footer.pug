//- Все примеси в этом файле должны начинаться c имени блока (footer)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт в сборку

mixin footer(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +footer('some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' footer--' + modsList[i].trim();
      }
    }

  footer.footer(class= allMods)&attributes(attributes)
    .footer__inner
      .footer__logo
        svg.logo
          use(href= src.icon + 'logo__cheburek')
      nav.footer__nav
        a.footer__nav-item(href='shop.html') Магазин
        a.footer__nav-item(href='shop.html') Инвентарь
        a.footer__nav-item(href='shop.html') FAQ
        a.footer__nav-item(href='shop.html') Инструкция
      +button('link', 'Группа в Вконтакте', '', '', '', '#')(class='footer__vk-button')
        svg.button__icon
          use(href='img/svgSprite.svg#icon__vk')
      .footer__info.
        ИП Иванов Иван Иванович, #[strong ИНН:] 1234567890, #[strong ОГРНИП:] 1234567890, #[strong Email:] #[a(href='mailto:cheburek@mail.ru') cheburek@mail.ru] #[strong Телефон:] #[a(href='tel:87075404919') +77075404919], 123456, г. Москва, Ул. Пушкина 1, кв. 1
      - year = new Date().getFullYear();
      .footer__copy #{year} © #[strong Cheburek]
