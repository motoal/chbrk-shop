//- Все примеси в этом файле должны начинаться c имени блока (wallet)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin wallet(text, type, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +wallet('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' wallet--' + modsList[i].trim();
      }
    }
  if type === 'link'
    a.wallet(href='payment.html', class=allMods)&attributes(attributes)
      svg.wallet__icon
        use(href='img/svgSprite.svg#icon__wallet')
      .wallet__title #[span #{text}] ₽
  else
    .wallet(class=allMods)&attributes(attributes)
      svg.wallet__icon
        use(href='img/svgSprite.svg#icon__wallet')
      .wallet__title #[span #{text}] ₽
